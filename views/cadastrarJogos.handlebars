<form method="post" action="/cadastrar/jogos">
    <div class="formulario">
  <div class="form-group">
      <hr>
    <label for="exampleInputEmail1">Nome do Jogo:</label>
    <input type="text" class="form-control" name="name" aria-describedby="emailHelp" placeholder="Digite o nome do Jogo">
  </div>
  <div class="form-group">
    <label for="exampleInputAno">Ano de lançamento:</label>
    <input type="input" class="form-control" name="year" placeholder="Digite o ano de lançamento">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Categoria:</label>
    <input type="input" class="form-control" name="category" placeholder="Digite a categoria do jogo">
  </div>
  <div class="botao-cadastrar">
  <button type="submit" class="btn btn-success">Cadastrar</button>
  </div>
</form>
</div>